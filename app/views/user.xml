<Alloy>
	<Window class="win">
		<TableView id="messages">
			<TableViewRow height="100%">
				<ActivityIndicator id="msgsLoader" />
			</TableViewRow>
		</TableView>
		<View id="messageSenderArea">
			<View id="messageSender">
				<Label id="prevMsg" class="right top" />
				<TextArea id="textarea" />
			</View>
			<View id="send">
				<ImageView id="sendImage" />
			</View>
		</View>
		<ScrollView id="scrollview">
			<ImageView id="avatar">
				<ActivityIndicator id="loader" />
			</ImageView>
			<View class="infoSteps">
				<View class="step">
					<Label id="l_birthday" />
					<Label id="birthday" class="right" />
				</View>
				<View class="step">
					<Label id="l_email" />
					<Label id="email" class="right" />
				</View>
				<View class="step">
					<Label id="l_mobile" />
					<Label id="mobile" class="right" />
				</View>
				<View class="step talkmeabout">
					<Label id="l_talkmeabout" class="top" />
					<Label id="talkmeabout" class="right" />
				</View>
				<View class="step">
					<Label id="l_icomefrom" />
					<Label id="icomefrom" class="right" />
				</View>
			</View>
		</ScrollView>
	</Window>
	<View class="infoHeader" id="infoHeader">
		<Label id="name" />
		<Label id="charge" />
	</View>
</Alloy>